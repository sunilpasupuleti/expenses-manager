const multer = require("multer");
const path = require("path");

const validAudioExtensions = [
  ".wav",
  ".mp3",
  ".m4a",
  ".aac",
  ".caf",
  ".ogg",
  ".flac",
  ".amr",
  ".webm",
];

// Configure multer for audio file uploads
const storage = multer.diskStorage({
  destination: (req, file, cb) => {
    cb(null, "voice-chat-uploads/temp/"); // Temporary upload directory
  },
  filename: (req, file, cb) => {
    const uniqueSuffix = Date.now() + "-" + Math.round(Math.random() * 1e9);
    cb(null, `audio-${uniqueSuffix}${path.extname(file.originalname)}`);
  },
});

const fileFilter = (req, file, cb) => {
  // Accept audio files only
  const fileExtension = path.extname(file.originalname).toLowerCase();
  const isValidAudioExtension = validAudioExtensions.includes(fileExtension);
  const isAudioMimeType = file.mimetype.startsWith("audio/");
  const isOctetStream = file.mimetype === "application/octet-stream";
  if (isAudioMimeType || (isOctetStream && isValidAudioExtension)) {
    console.log("✅ File accepted:", file.originalname);
    cb(null, true);
  } else {
    console.log("❌ File rejected:", {
      mimetype: file.mimetype,
      extension: fileExtension,
      reason: "Invalid file type",
    });
    cb(
      new Error(
        `Invalid file type: ${file.mimetype} with extension ${fileExtension}. Only audio files are allowed!`
      ),
      false
    );
  }
};

const audioUpload = multer({
  storage: storage,
  fileFilter: fileFilter,
  limits: {
    fileSize: 10 * 1024 * 1024, // 10MB limit
  },
});

module.exports = audioUpload;
